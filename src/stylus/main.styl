@import 'modern-normalize'

.wrapper-content
	padding 30px 20px

header
	background-color #76e697
	border-top 5px solid #40cc76

	a
		outline none

	.logo
		margin-bottom 30px

		img
			max-width 300px
			width 100%

	.quotation
		p
			color #333
			font-family "Roboto", sans-serif
			font-size 18px

main
	ul
		list-style-type none
		margin 0
		padding 0

		li
			background-color #76e697
			border-left 10px solid #40cc76
			font-family "Roboto", sans-serif
			font-size 18px
			line-height 1.3
			margin-bottom 3px
			padding 20px 20px 20px 10px

footer
	span
		font-family "Roboto", sans-serif
		font-size 18px


